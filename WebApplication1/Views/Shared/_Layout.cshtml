    <!-- Bootstrap Bundle يشمل (Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function sendWhatsAppMessage(event) {
    event.preventDefault(); // منع إعادة تحميل الصفحة

    const whatsappNumber = document.getElementById('whatsappNumber').value;
    const targetNumber = '0959990728'; // الرقم الذي تريد إرسال الرسالة إليه

    // تنظيف الرقم المدخل من أي أحرف غير رقمية
    const cleanedNumber = whatsappNumber.replace(/\D/g, '');

    // التحقق من صحة الرقم
    if (cleanedNumber.length < 10) {
        alert('الرجاء إدخال رقم واتساب صحيح.');
        return;
    }

    // نص الرسالة المطلوب
    const message = `ارجو اضافة رقمي (${cleanedNumber}) الى نشرة السيارات`;

    // إنشاء رابط واتساب
    const whatsappUrl = `https://wa.me/${targetNumber}?text=${encodeURIComponent(message)}`;

    // فتح الرابط في نافذة جديدة
    window.open(whatsappUrl, '_blank');
}
    </script>

</body>
</html>
